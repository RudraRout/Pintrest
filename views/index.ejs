<%- include('./partials/header.ejs') %>
  <div
    class="w-full min-h-screen bg-zinc-300 flex items-center justify-center bg-[url('https://images.unsplash.com/photo-1620503374956-c942862f0372?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] bg-cover">
    <div
      class="w-[70vw] md:w-[60vw] lg:w-[40vw] xl:w-[25vw] bg-white px-4 md:px-8 lg:px-14 py-4 md:py-8 lg:py-10 rounded-[30px] bg-opacity-60 ">
      <div>
        <img src="https://static-00.iconduck.com/assets.00/pinterest-icon-2048x2048-os3lysf9.png"
          class="w-12 mx-[40%] my-2" alt="" srcset="">
      </div>
      <h1 class="text-2xl text-center font-semibold text-zinc-700 tracking-tighter leading-none">Welcome to Pinterest
      </h1>

      <form action="/login" method="post">
        <label for="email" class="text-zinc-500 inline-block mt-2">Email address:</label>
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username"
          placeholder="username">
        <label for="password" class="mt-3 inline-block text-zinc-500">Password:</label>
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" id="Password"
          placeholder="Password">
        <a class="mt-2 inline-block font-semibold text-zinc-500" href="#">Forgot password?</a>
        <input
          class="border-2 rounded-full block mt-4 cursor-pointer w-full px-3 py-2 bg-[rgb(255,0,0)] text-xl text-white border-none rounded-full"
          type="submit" value="Login">

      </form>

      <div>
        <p class="text-xs  font-semibold  text-zinc-700 mt-2 text-center">By continuing, you agree to Pinterest's Terms
          of Service; Opens a new tab and acknowledge you've read our
          Privacy Policy; Opens a new tab. Notice at collection; Opens a new tab.</p>
        <hr>
      </div>

      <div>
        <p class="text-xs  font-semibold  text-zinc-700 mt-2 text-center ">
          <a href="/register"> Not on Pinterest yet? Sign up <br></a>
          Are you a business?
          Get started here!
        </p>
      </div>

    </div>
  </div>
  <%- include('./partials/footer.ejs') %>